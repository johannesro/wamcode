#!/bin/sh
set -ex
. ${0%/*}/.dirset
path_o=${PRODADMDIR}/obj
path_f=${PRODADMDIR}/src/chief

modfile="chief wavemdl initmdl read_wam_user print_wam_status read_wind_input_metno \
read_current_input wamodel read_boundary_input read_ice_input_metno jafu \
read_topo_input readsat"

cd $path_o

for code in $modfile
do
   rm -f ${code}.f ${code}.o
   cp ${path_f}/${code}.f90 ${path_o}/${code}.f
   #mpxlf90 -c ${code}.f -O3 -qhot -qstrict -qarch=pwr6 -qtune=pwr6 -qmaxmem=-1 -lmass
   ifort -free -c ${code}.f -O3 -xAVX -traceback -ip -align all -ftz -fno-alias -no-prec-div -no-prec-sqrt -lnetcdff 
   rm -f ${code}.f
done
