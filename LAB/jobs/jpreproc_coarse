#!/bin/sh
#PBS -o preproc_coarse.log
#PBS -e preproc_coarse.err
#PBS -N  preproc_coarse
# Account to run job (change the account name: See Accounting above)
#PBS -A nn2857k
#PBS -l select=1:ncpus=1
#PBS -l walltime=1:00:00
#-----------------------------------------------
